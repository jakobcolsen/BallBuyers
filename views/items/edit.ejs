<%- include("../partials/header.ejs") %>
    <link rel="stylesheet" href="/css/new.css">
    <script src="/scripts/fileSizeHandler.js" defer></script>
        <main>
            <article class="new">
                <img src="/images/bb-logo.png" alt="Ball Buyers logo">
                <h2>Edit Item</h2>
                <form action="/items/<%= item._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <label for="title">Auction Name</label>
                    <input type="text" name="title" id="title" value="<%- item.title %>" required >
                    <label for="condition">Condition</label>
                    <select name="condition" id="condition">
                        <option value="Perfect" <%= item.condition === 'Perfect' ? 'selected' : '' %>>Perfect</option>
                        <option value="Great" <%= item.condition === 'Great' ? 'selected' : '' %>>Great</option>
                        <option value="Good" <%= item.condition === 'Good' ? 'selected' : '' %>>Good</option>
                        <option value="Fair" <%= item.condition === 'Fair' ? 'selected' : '' %>>Fair</option>
                        <option value="Bad" <%= item.condition === 'Bad' ? 'selected' : '' %>>Bad</option>
                    </select>
                    <label for="price">Sale Price</label>
                    <input type="number" id="price" name="price" min="0" step="0.01" required value="<%= item.price %>">
                    <label for="description">Description</label>
                    <textarea id="description" name="details" rows="4" required><%- item.details %></textarea>
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept=".png, .jpg, .jpeg">
                    <button type="submit" id="submit">Submit</button>
                </form>
            </article>
        </main>
<%- include("../partials/footer.ejs") %>
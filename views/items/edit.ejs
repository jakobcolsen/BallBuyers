<%- include("../partials/header.ejs") %>
    <link rel="stylesheet" href="/css/new.css">
    <script src="/scripts/fileSizeHandler.js" defer></script>
        <main>
            <h2>Edit Item</h2>
            <article class="new">
                <div class="new-text">
                    <img src="/images/bb-logo.png" alt="Ball Buyers logo">
                    <p>Thank you for selling with Ball Buyers! We pride ourselves on making the baseball buying and selling process as easy and trustworthy as possible.</p>
                </div>
                <form action="/items/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <label for="title" required>Auction Name</label>
                    <input type="text" name="title" id="title" value="<%= item.title %>">
                    <label for="condition">Condition</label>
                    <select name="condition" id="condition" value="<%= item.condition %>">
                        <option value="Perfect">Perfect</option>
                        <option value="Great">Great</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                        <option value="Bad">Bad</option>
                    </select>
                    <label for="price">Sale Price</label>
                    <input type="number" id="price" name="price" min="0" step="0.01" value="<%= item.price %>" required>
                    <label for="description">Description</label>
                    <textarea id="description" name="details" rows="4" required><%= item.details %></textarea>
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept=".png, .jpg, .jpeg">
                    <button type="submit" id="submit">Submit</button>
                </form>
            </article>
        </main>
<%- include("../partials/footer.ejs") %>
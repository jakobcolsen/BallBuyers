<%- include("../partials/header.ejs") %>
        <link rel="stylesheet" href="/css/items.css">
        <main>
            <h2><%= title %></h2>
            <% if (items.length > 0) { %>
                <div class="item-card-container">
                    <% items.forEach(item => { %>
                        <a href="/items/<%= item.id %>"><div class="card">
                            <img src="<%= item.image %>" class="card-image" alt="<%= item.title %>">
                            <% let displayTitle = item.title.length > 20 ? item.title.substring(0, 20) + "..." : item.title; %>
                            <p class="card-title"><%= displayTitle %></p>
                            <p class="card-condition"><%= item.condition %></p>
                            <p class="card-price">$<%= item.price %></p>
                            <p class="card-offers"><%= item.offers.length %> offers</p>
                        </div></a>
                    <% }); %>
                    <div class="catalog-end">
                        <img src="/images/bb-logo.png" alt="Ball Buyers logo">
                        <h3>Want to see your items here?</h3>
                        <button class="new-button">Sell with Ball Buyers</button>
                    </div>
                </div>
            <% } else { %>
                <div class="catalog-end center">
                    <img src="/images/bb-logo.png" alt="Ball Buyers logo">
                    <h3>There are no items currently in our catalog, want to be the first?</h3>
                    <button class="new-button">Sell with Ball Buyers</button>
                </div>
            <% } %>
        </main>
<%- include("../partials/footer.ejs") %>